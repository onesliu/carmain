<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/reconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="onConnectBt"
        android:text="重连" />
    
    <ProgressBar
        android:id="@+id/connectProgress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
    
    <EditText
        android:id="@+id/debugInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reconnect"
        android:layout_below="@+id/reconnect"
        android:layout_toLeftOf="@+id/sendBtn"
        android:inputType="text"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/debugOutput"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/debugInput"
        android:ems="10"
        android:minLines="15"
        android:gravity="top"
        android:inputType="none" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/reconnect"
        android:layout_below="@+id/reconnect"
        android:onClick="onClickSend"
        android:text="发送" />

    
</RelativeLayout>